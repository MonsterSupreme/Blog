root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.css]
    indent_size = 4

[*.html]
    indent_size = 2

[*.{js,ts}]
    indent_size = 2

[*.json]
    indent_size = 2

[*.md]
    indent_size = 4

[*.toml]
    indent_size = 4

[*.xml]
    indent_size = 4
    indent_style = tab

[*.yaml]
    indent_size = 2
